---
import PelisController from "../classes/PelisController";
const { id } = Astro.props;
const pelisController = new PelisController();
const pelis = await pelisController.getItemById(id);
---

<div class="col-3">
    <div class="customCard">
        <div class="card" style="width: 18rem;">
            <img src={pelis.image} class="card-img-top" alt="..." />
            <div class="card-body">
                <h5 class="card-title">{pelis.title}</h5>
                <p class="card-text">
                    {pelis.plot}
                </p>
                <a href={pelis.Id} class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
    </div>
</div>
